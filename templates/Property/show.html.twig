
{% extends 'base.html.twig' %}

{% block body %}

    <div class="container" text-center>
            <h1>{{property.title}}</h1>
        <div class="row">
        	<div class="col-md-8">
        		
        	</div>
        	<div class="col-md-4">
        		<h4>{{property.title}}</h4>
        		<h2>{{property.rooms}} pieces -  {{property.surface}} m2</h4>
        		<div class="text-primary" style="font-weight: bold;font-size: 5em">{{property.price|number_format(0, '', ' ') }}</div>
        		<button class="btn btn-primary">Contacter l'agence</button>
        	</div>
        	
	     </div> 

	     <p> {{property.description}}</p>

	     <div class="row">
	     	<div class="col-md-8">
	     		<table class="table table-striped">
	     			<tr>
	     				<td>Surface</td>
	     				<td>{{property.surface}}</td>
	     			</tr>
	     			<tr>
	     				<td>Pieces</td>
	     				<td>{{property.rooms}}</td>
	     			</tr>
	     			<tr>
	     				<td>Surface</td>
	     				<td>{{property.surface}}</td>
	     			</tr>
	     		</table>
	     	</div>
	     </div> 

    </div>

{% endblock %}


