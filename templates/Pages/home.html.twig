        <div class="container">
        	<h2>les derniers biens</h2>

        	<div class=" row flex">
	        	{% for property in properties %}
		        	<div class="col-3">
		        		<div class="card">
		        			<div class="card-body">
		        				<h5 class="card-title">
		        					<a href="{{path('property.show' , {'id': property.id, 'slug': property.slug} )}}""> {{property.title}} </a>
		        				</h5>
		        				<p class="carte-text"> {{property.city}} {{property.zipCode}} </p>
		        				<p class="text-primary" style="font-weight: bold"> {{property.price|number_format(0, '', ' ') }} </p>

		        			</div>
		        		</div>
		        	</div>
	        	{% endfor %}
	        </div>

